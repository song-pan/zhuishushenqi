
/* 书籍详情 */
.books{
	display: flex;
}
.book-details{
	color: #888787c7;
	margin-left: 10rpx;
}
.book-image image{
	width: 190rpx;
	height: 253rpx;
  border-radius: 6rpx;
}
.book-title{
	color: #000;
	font-size: 36rpx;
	font-weight: bold;
}
.book-score{
	position: relative;
	display:flex;
	margin: 20rpx 0;
}

/* 分数的字体 */
.scoretext{
	line-height: 35rpx;
	margin-right: 20rpx;
	color: #f8c330;
	font-size: 40rpx;
}

/* 灰色星星 */
.stars{
	z-index: 1;
	width: 43rpx;
	height: 33rpx;
	background-image: url("https://i.52112.com/icon/jpg/256/20190828/55786/2488959.jpg");
	background-size: 33rpx 33rpx;
	background-position:center center;
	background-repeat: no-repeat;
}
/* 黄色星星 */
.hideStar{
	z-index: 2;
	background-image: url("https://i.52112.com/icon/jpg/256/20200408/73169/3109032.jpg");
	width: 43rpx;
	height: 33rpx;
	background-size: 33rpx 33rpx;
	background-position: center center;
	background-repeat: no-repeat;
}
/* 评价人数 */
.evaluateCount{
	line-height: 35rpx;
	font-size: 26rpx;
}

.author,.majorCat{
	font-size: 26rpx;
}

.author{
	color: #DC143C;
}

